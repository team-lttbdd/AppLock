<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp nền với gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_start"
                android:endColor="@color/gradient_end"
                android:angle="-45" />
        </shape>
    </item>

    <!-- Lớp hình tick, căn giữa so với lớp nền -->
    <item android:gravity="center">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <!-- Sử dụng group để phóng to dấu tích -->
            <group
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:pivotX="11"
                android:pivotY="16">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M9,16.17L5.83,13l-1.41,1.41L9,19l10-10l-1.41-1.41L9,16.17z"/>
            </group>
        </vector>
    </item>
</layer-list>
